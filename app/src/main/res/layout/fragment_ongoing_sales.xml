<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/wrapedWhite"
    tools:context=".fragments.market.OngoingSalesFragment"
    >

    <LinearLayout
        android:id="@+id/my_fares_sum_and_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:weightSum="2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/my_fares_count_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/my_fares_date_of_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:padding="15dp"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/wrapedWhite"
        android:layout_below="@+id/my_fares_sum_and_date"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/my_fares_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_fares_sum_and_date"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:outlineAmbientShadowColor="@color/teal_primary"
            tools:ignore="NotSibling"
            tools:itemCount="10"
            tools:listitem="@layout/my_market_item_layout">


        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>



</RelativeLayout>