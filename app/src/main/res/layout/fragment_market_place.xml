<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:background="@color/wrapedWhite">

    <LinearLayout
        android:id="@+id/top_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_primary"
        android:orientation="horizontal">


        <com.google.android.material.appbar.MaterialToolbar
            style="@style/FragmentAppBarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:title="Latest">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </com.google.android.material.switchmaterial.SwitchMaterial>


        </com.google.android.material.appbar.MaterialToolbar>

        <Spinner
            android:id="@+id/seller_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:background="@drawable/teal_outline"
            android:popupBackground="@drawable/teal_outline_with_white_background"
            android:spinnerMode="dropdown"
            tools:listitem="@layout/item_filter"
           >

        </Spinner>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/sum_and_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_app_bar"
        android:orientation="horizontal"
        android:weightSum="2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/count_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/date_of_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:padding="15dp"/>
        </LinearLayout>


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sum_and_date"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        tools:ignore="NotSibling"
        tools:itemCount="10"
        tools:listitem="@layout/item_layout" />

</RelativeLayout>