<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="log_in">log_in
        <item name="android:textSize">
            16sp
        </item>

        <item name="android:textColor">
            #EEEEEE
        </item></style>
    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeErrorColor">@color/text_input_box_stroke_error</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke_color</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/teal_primary</item>
        <item name="android:textColorHint">@color/wrapedWhite</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconDrawable">@drawable/ic_error_mark</item>
        <item name="errorIconTint">@color/text_input_box_stroke_error</item>
        <item name="errorTextAppearance">@style/error_appearance</item>


    </style>
    <style name="new_to_3rea">
        <item name="android:textSize">
            12sp
        </item>
        <item name="android:textColor">
            #B3EEEEEE
        </item>
    </style>
    <style name="SignUpTextInputLayoutStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="strokeColor">@color/white</item>
    </style>

    <style name="modifiedAppBar" parent="Widget.MaterialComponents.AppBarLayout.PrimarySurface">
        <item name="android:backgroundTint">@color/darkGrey</item>

    </style>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">28sp</item>

    </style>
    <style name="bottomMenuBar">
        <item name="itemBackground">@color/darkGrey</item>
        <item name="itemFillColor">@color/bottom_menu_item_color</item>
    </style>


